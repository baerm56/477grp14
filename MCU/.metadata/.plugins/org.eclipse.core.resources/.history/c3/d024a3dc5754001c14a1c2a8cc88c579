					"jazz.wav"};
  SpeakerInit(&hdac, &htim4);
  WaveplayerInit(&hspi3, &hdac);
  /*HAL_Delay(2000);
  prepAudio(&hspi1, &hspi2, &hdac);
  PlayAudio(audio[3], &hdac);
  PlayAudio(audio[9], &hdac);
  PlayAudio(audio[3], &hdac);
  PlayAudio(audio[11], &hdac);
  resetAudio(&hspi1, &hspi2, &hdac);*/

  /*   EnableUart(&huart1);

  char send[4] = {'S', 'T', 'R', 'T'};
  char recv[6] = {'-', '-', '-', '-', '-'};
  uint8_t color = 0;
  uint8_t edum = 0;
  sendStart(&huart1, color, edum);
  sendDifficulty(&huart1, 1);
  if (color){
	  receiveData(&huart1, recv);
  }
  */

  // Initialize Buttons
  InitButtons(&htim2, &htim5);

  // Initialize Tracker component
  InitTracker();
  while(!ValidateStartPositions())
  {
	  /// @todo: play audio cue and invoke LEDs to put pieces in correct starting positions
	  HAL_Delay(10);
  }

  // Splash LEDs when ready
  for(uint8_t i = 0; i < 8; i++)
  {
	  board[i][0] = 1;
	  board[i][7] = 1;
	  board[0][i] = 1;
	  board[7][i] = 1;
  }
  writeBoardValue(&hspi1, board);

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
	  //TestLEDs();
	  Track();
	  HAL_Delay(10);
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
	/*sendMove(&huart1, send);
	receiveData(&huart1, recv);
	if (memcmp(recv, "-----", 5) != 0){
